(function () {
	$('.add-share').hide();
	var sharesHtml = "<%= j render('lists/shares', :list => @share.list) %>";
	$('.share-detail').replaceWith(sharesHtml);
	$('.share-item').click(function(){
		$('.add-share').toggle();
		$('.shares-list').toggle($('.add-share').is(":visible"));
	});
	$('.shares-expand').dblclick(function(){
		$('.shares-list').toggle();
	});
	$('.share-email').dblclick(function(e){
		var me = e.target; 
		var id = $(me).attr('id');
		$('#' + id + ' .share-item').toggle();
	});
})();