// Show page, add list item

(function () {
  var id = "<%= @item.id %>";
  var itemHtml = "<%= j render('show', :item => @item) %>";
  var editHtml = "<%= j render('edit', :item => @item) %>";
  $('ul.list-items').append(itemHtml);
  $('ul.list-items').append(editHtml);
  $('input#content').val("");
  $('.non-edit-item').dblclick(function(e){
	var me = e.target;
	var id = $(me).attr('id');
	$('span#list-icons'+ id).show();
	$(me).hide();
	$('li#edit'+ id).show();
  });
})();