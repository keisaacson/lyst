
<li id=<%= "edit#{item.id}" %> class="list-item top-level" hidden>
	<%= form_tag("/items/#{item.id}", method: :put, remote: true) do -%>
		<input type="text" id=<%= "content#{item.id}" %> name="item[content]" value="<%= item.content %>">
		
		<input name="list[id]" value=<%= "#{item.list_id}" %> type="hidden">
		<span id=<%="list-icons#{item.id}"%> class="list-icons">
			<span class="edit-item hover-4"><%= image_submit_tag("/images/save.jpeg")%></span>
			<%= link_to image_tag("/images/trash.jpeg"), item, method: :delete, remote: true, class: "delete-item hover-3", id: "delete#{item.id}" %>
			<span class="hover-text-4">Save Changes</span>
		    <span class="hover-text-3">Delete Item</span>
		</span>
	<% end -%></li>