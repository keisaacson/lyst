<div id="my-lists-container">
<strong class="list-title">My Lists</strong>
	<ul class="list-items">
	  <% if @lists.length == 0 %>
	    <p class="empty-list"> You don't have any lists- add some below!</p>
	  <% else %>
	    <% @lists.each do |list| %>
	        <%= render('lists/show', :list => list) %>
	    <% end -%>
	  <% end %>
	</ul>
</div>

<div id="my-shares-container">
	<strong class="list-title">My Shares</strong>
	<ul class="list-items">
	  <% if @shares.length == 0 %>
	    <p class="empty-list"> You don't currently have any shares :( </p>
	  <% else %>
	    <% @shares.each do |share| %>
	        <%= render('lists/show', :list => share.list) %>
	    <% end -%>
	  <% end %>
	</ul>
</div>

<div id="public-lists-container">
	<strong class="list-title">Recent Public Lists</strong>
	<ul class="list-items">
	  <% if @public_lists.length == 0 %>
	    <p class="empty-list"> There aren't any public lists!! </p>
	  <% else %>
	    <% @public_lists.each do |public_list| %>
	        <%= render('lists/show', :list => public_list) %>
	    <% end -%>
	  <% end %>
	</ul>
</div>

<%= link_to 'Add New List', new_list_path %>
