// Edit list title on Show Page & Edit list_type (public/private) on Index page

(function () {
	var title = "<%= raw @list.title %>";
	$('.list-title .title').text(title);
	$('.edit-title form').hide();
	$('.list-title').show();
})();

(function () {
	var shareHtml = "<%= j render('lists/show_type', :list => @list) %>";
	$('.shares-container').replaceWith(shareHtml);
})();

(function () {
	var id = "<%= @list.id %>";
	var formHtml = "<%= j render('lists/type', :list => @list) %>";
	$('#list-expand' + id + ' .list-type').replaceWith(formHtml);
})();